<% layout("/layouts/boilerplate") %>

<h2 class="electrical">Plumbing services</h2>

<div class="service-container">
  <% services.forEach(service => { %>
  <div class="service-card">
    <h5><%= service.name %></h5>
    <p><strong>Work:</strong> <%= service.work %></p>
    <p><strong>Location:</strong> <%= service.location %></p>
    <p><strong>Price:</strong> <%= service.price %></p>
    <!-- Book Now Button triggers the modal -->
    <a
      href="#"
      class="book-now-btn"
      data-toggle="modal"
      data-target="#exampleModal<%= service.id %>"
      >Book Now</a
    >
  </div>

  <!-- Modal Structure -->
  <div
    class="modal fade"
    id="exampleModal<%= service.id %>"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel<%= service.id %>"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel<%= service.id %>">
            Contact Information
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p><strong>Name:</strong> <%= service.name %></p>
          <p><strong>Phone:</strong> <%= service.phone %></p>
          <p><strong>Email:</strong> <%= service.email %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</div>

<!-- Include Bootstrap CSS and JS -->
<link
  rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
/>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
